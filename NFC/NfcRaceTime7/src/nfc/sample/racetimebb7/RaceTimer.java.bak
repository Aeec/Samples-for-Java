package nfc.sample.racetimebb7;

import java.util.TimerTask;

public class RaceTimer extends TimerTask {
    
    private Time time = Time.getInstance();

    public RaceTimer() {
        time.start();
    }
    
    public void run() {
        TimerScreen screen = TimerScreen.getTimerScreen();
        time.setNow();
        screen.updateTime(time);
    }

}
